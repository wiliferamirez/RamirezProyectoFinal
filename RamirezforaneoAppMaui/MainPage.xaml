<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RamirezforaneoAppMaui"
             x:Class="RamirezforaneoAppMaui.MainPage">

    <VerticalStackLayout Spacing="25" Padding="30">

        <Button Text="Go to Markets Management"
                Clicked="OnNavigateToMarketsClicked" />

        <Button Text="Go to Events Management"
                Clicked="OnNavigateToEventsClicked" />

        <Button Text="Go to Categories Management"
                Clicked="OnNavigateToCategoriesClicked" />

        <Button Text="Log Out"
                Clicked="OnLogoutClicked" />
    </VerticalStackLayout>

</ContentPage>
