<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RamirezforaneoAppMaui.ViewModel.Admin"
             x:Class="RamirezforaneoAppMaui.Views.Admin.CategoriesManagement.CreateCategory"
             Title="CreateCategory">
    <ContentPage.BindingContext>
        <local:CategoriesViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions=".1*, .9*">
        <Image Aspect="AspectFill" Source="students.jpg"/>
        <Grid BackgroundColor="#303030" Opacity=".7"/>
        <Grid ColumnDefinitions="*">
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5, -30, -5, -2"
                    CornerRadius="30, 30, 0, 0"
                    Fill="White"/>
            <VerticalStackLayout Margin="30, 0, 30, 0">
                <Image Aspect="AspectFit"
                   HeightRequest="30"
                   Source="logoapp.webp"/>
                <Label FontAttributes="Bold"
                   FontFamily="bold"
                   FontSize="Large"
                   Text="Categories"
                   HorizontalTextAlignment="Center"
                   TextColor="#2D2D2D"/>
                <Label FontFamily="medium"
                   Text="Create Category"
                   TextColor="#A3A3A4"
                   HorizontalOptions="Center"/>
                <VerticalStackLayout Padding="20" Spacing="15">
                    <Label Text="Create New Category"
               FontAttributes="Bold"
               FontSize="Large"
               HorizontalOptions="Center" />

                    <!-- Input for Category Name -->
                    <Entry Placeholder="Category Name"
               Text="{Binding NewCategoryName}"
               FontSize="Medium"
               ClearButtonVisibility="WhileEditing" />

                    <!-- Input for Description -->
                    <Editor Placeholder="Description"
                Text="{Binding NewCategoryDescription}"
                FontSize="Medium"
                HeightRequest="100"
                AutoSize="TextChanges" />

                    <!-- Submit Button -->
                    <Button Text="Create Category"
                Command="{Binding CreateCategoryCommand}"
                BackgroundColor="Green"
                TextColor="White"
                FontAttributes="Bold" />

                    <!-- Cancel Button -->
                    <Button Text="Cancel"
                Command="{Binding CancelCreateCategoryCommand}"
                BackgroundColor="Gray"
                TextColor="White"
                FontAttributes="Bold" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Grid>
    </Grid>

</ContentPage>