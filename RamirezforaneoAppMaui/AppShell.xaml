<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RamirezforaneoAppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RamirezforaneoAppMaui"
    Shell.FlyoutBehavior="Disabled"
    Title="RamirezforaneoAppMaui">

    <ShellContent 
        Route="IndexEventsPage" 
        ContentTemplate="{DataTemplate local:Views.Admin.EventsManagement.Index}" />




    <ShellContent
        ContentTemplate="{DataTemplate local:Views.Authentication.Login}"
        Route="LoginPage" />

    <ShellContent
        Title="RegisterPage"
        ContentTemplate="{DataTemplate local:Views.Authentication.Register}"
        Route="RegisterPage" />

    <ShellContent
        Title="IndexCategoryPage"
        ContentTemplate="{DataTemplate local:Views.Admin.CategoriesManagement.Index}"
        Route="IndexCategoryPage" />
    
    <ShellContent 
        Route="CreateCategoryPage" 
        ContentTemplate="{DataTemplate local:Views.Admin.CategoriesManagement.CreateCategory}" />

    <ShellContent 
        Route="ActionsCategoriesPage" 
        ContentTemplate="{DataTemplate local:Views.Admin.CategoriesManagement.ActionsPage}" />
    



    <ShellContent Title="Main" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    

</Shell>
