@model RamirezforaneoApp.Models.Slider

@{
    ViewData["Title"] = "Add Slider Image";
}

<h1>Upload Image</h1>

<hr />

<form asp-action="AddImage" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="SliderUrlImage">Image URL</label>
        <input type="url" id="SliderUrlImage" name="SliderUrlImage" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ImageStatus"></label>
        <select asp-for="ImageStatus" class="form-control">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
