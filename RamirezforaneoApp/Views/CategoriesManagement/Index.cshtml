@model IEnumerable<RamirezforaneoApp.Models.Category>

@{
    ViewData["Title"] = "All Categories";
}
<br />
<h1>All Categories</h1>
<hr />
<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<br />
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
